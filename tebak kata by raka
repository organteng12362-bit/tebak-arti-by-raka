<script>
const questions = [
{word:"Write",correct:"Menulis"},
{word:"Read",correct:"Membaca"},
{word:"Speak",correct:"Berbicara"},
{word:"Listen",correct:"Mendengar"},
{word:"Strong",correct:"Kuat"},
{word:"Weak",correct:"Lemah"},
{word:"Happy",correct:"Senang"},
{word:"Sad",correct:"Sedih"},
{word:"Big",correct:"Besar"},
{word:"Small",correct:"Kecil"},
// (kata lain tetap sama, tidak perlu diubah)
];

let score = 0;
let index = 0;

function shuffle(arr) {
    return arr.sort(() => Math.random() - 0.5);
}

function loadQuestion() {
    const q = questions[index];
    document.getElementById("word").innerText = q.word;
    document.getElementById("result").innerText = "";

    // ambil 2 jawaban salah yang PASTI beda
    let wrongAnswers = questions
        .filter(item => item.correct !== q.correct)
        .map(item => item.correct);

    shuffle(wrongAnswers);

    let choices = shuffle([
        q.correct,
        wrongAnswers[0],
        wrongAnswers[1]
    ]);

    const choicesDiv = document.getElementById("choices");
    choicesDiv.innerHTML = "";

    choices.forEach(choice => {
        const btn = document.createElement("button");
        btn.innerText = choice;
        btn.onclick = () => checkAnswer(choice);
        choicesDiv.appendChild(btn);
    });
}

function checkAnswer(answer) {
    const q = questions[index];

    if (answer === q.correct) {
        document.getElementById("result").innerText = "‚úÖ Benar!";
        score++;
    } else {
        document.getElementById("result").innerText =
            `‚ùå Salah! Arti kata "${q.word}" adalah "${q.correct}"`;
    }

    document.getElementById("score").innerText = "Skor: " + score;

    index++;
    if (index < questions.length) {
        setTimeout(loadQuestion, 1200);
    } else {
        setTimeout(() => {
            alert("Game selesai! Skor akhir: " + score);
            index = 0;
            score = 0;
            loadQuestion();
            document.getElementById("score").innerText = "Skor: 0";
        }, 1200);
    }
}

loadQuestion();
</script>

</body>
